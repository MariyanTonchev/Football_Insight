@model UserViewModel

<div class="layout-px-spacing">
    <div class="middle-content container-xxl p-0">
        <div class="row layout-spacing justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-12 layout-top-spacing">
                <div class="user-profile">
                    <div class="widget-content widget-content-area" style="padding: 20px;">
                        <div class="d-flex justify-content-between">
                            <h3 class="">Profile</h3>
                            <a asp-area="User" asp-controller="Account" asp-action="Edit" class="mt-2 edit-profile"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg></a>
                        </div>
                        <div class="text-center user-info">
                            <img style="width: 150px; height: 150px;" src="@Model.PhotoPath" alt="avatar">
                            <p>
                                @if (string.IsNullOrEmpty(Model.FirstName) && string.IsNullOrEmpty(Model.LastName))
                                {
                                    <span>Edit your profile to add more information about you.</span>
                                }
                                else
                                {
                                    <span>@Model.FirstName @Model.LastName</span>
                                }
                            </p>
                        </div>
                        <div class="user-info-list">
                            <div class="">
                                <ul class="contacts-block list-unstyled" style="max-width: 300px !important;">
                                    @if (!string.IsNullOrEmpty(Model.FavoriteTeam))
                                    {
                                        <li class="contacts-block__item">
                                            <span style="margin-right: 14px;">
                                                <svg width="24" height="24" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                                                    <polygon fill="none" stroke="currentColor" stroke-width="10"
                                                             points="100,10 129,79 199,79 144,129 163,199 100,159 37,199 56,129 1,79 71,79" />
                                                    <rect x="95" y="90" width="10" height="60" fill="currentColor" />
                                                    <rect x="75" y="90" width="50" height="10" fill="currentColor" />
                                                </svg>

                                            </span>
                                            @Model.FavoriteTeam
                                        </li>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.FavoritePlayer))
                                    {
                                        <li class="contacts-block__item">
                                            <span style="margin-right: 14px;">
                                                <svg width="24" height="24" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                                                    <polygon fill="none" stroke="currentColor" stroke-width="10"
                                                             points="100,10 129,79 199,79 144,129 163,199 100,159 37,199 56,129 1,79 71,79" />
                                                    <text x="50%" y="60%" fill="currentColor" font-size="90" font-family="Arial"
                                                          text-anchor="middle" dominant-baseline="central">P</text>
                                                </svg>
                                            </span>
                                            @Model.FavoritePlayer
                                        </li>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Country) || !string.IsNullOrEmpty(Model.City))
                                    {
                                        <li class="contacts-block__item">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin me-3"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                                            @if (!string.IsNullOrEmpty(Model.Country) && !string.IsNullOrEmpty(Model.City))
                                            {
                                                <span>@Model.Country, @Model.City</span>
                                            }
                                            else if (!string.IsNullOrEmpty(Model.Country))
                                            {
                                                <span>@Model.Country</span>
                                            }
                                            else
                                            {
                                                <span>@Model.City</span>
                                            }
                                        </li>
                                    }
                                    <li class="contacts-block__item">
                                        <a href="mailto:example@mail.com">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail me-3"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                            @Model.Email
                                        </a>
                                    </li>
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <li class="contacts-block__item">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone me-3"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                            @Model.Phone
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>