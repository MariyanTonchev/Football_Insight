                                    <div class="info">
                                        <h6 class="">General Information</h6>
                                        <div class="row">
                                            <div class="col-lg-11 mx-auto">
                                                <div class="row">
                                                    <div class="col-xl-2 col-lg-12 col-md-4">
                                                        <div class="profile-image mt-4 pe-md-4 file-upload-wrapper" style="text-align: center">
                                                            <button type="button" id="uploadButton" class="file-upload-button btn-secondary">Choose File</button>
                                                            <input asp-for="Photo" type="file" id="photoUpload" accept="image/*" class="file-upload-input" style="display: none;" />
                                                            <img id="photoPreview" src="@Model.PhotoPath" alt="Preview" style="margin-top: 25px; border-radius: 9px; width: 150px; height: 150px;" />
                                                            <span asp-validation-for="Photo" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                        <div class="form">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="FirstName">First Name</label>
                                                                        <input asp-for="FirstName" type="text" class="form-control mb-3" id="firstName" placeholder="First Name">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="LastName">Last Name</label>
                                                                        <input asp-for="LastName" type="text" class="form-control mb-3" id="lastName" placeholder="Last Name">
                                                                        <span asp-validation-for="City" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="Country">Country</label>
                                                                        <select asp-for="Country" class="form-select mb-3">
                                                                            <option value="None" selected>Select a country...</option>
                                                                            <option>Bulgaria</option>
                                                                            <option>United States</option>
                                                                            <option>England</option>
                                                                        </select>
                                                                        <span asp-validation-for="Country" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="City">City</label>
                                                                        <input asp-for="City" type="text" class="form-control mb-3" id="city" placeholder="City">
                                                                        <span asp-validation-for="City" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="FavoriteTeamId">Favorite Team</label>
                                                                        <select asp-for="FavoriteTeamId" class="form-control mb-3" placeholder="Select a teamm..." asp-items="@(new SelectList(Model.Teams, "TeamId", "Name"))">
                                                                            <option value="-1" selected>Select a team...</option>
                                                                        </select>
                                                                        <span asp-validation-for="FavoriteTeamId" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="FavoritePlayerId">Favorite Player</label>
                                                                        <select asp-for="FavoritePlayerId" class="form-control mb-3" placeholder="Select a player..." asp-items="@(new SelectList(Model.Players, "PlayerId", "Name"))">
                                                                            <option value="-1" selected>Select a player...</option>
                                                                        </select>
                                                                        <span asp-validation-for="FavoritePlayerId" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="Phone">Phone</label>
                                                                        <input asp-for="Phone" type="text" class="form-control mb-3" id="phone" placeholder="Write your phone number here">
                                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <fieldset disabled>
                                                                        <div class="form-group mb-6">
                                                                            <label asp-for="Email">Email</label>
                                                                            <input asp-for="Email" type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Email">
                                                                            <span asp-validation-for="Email" class="text-danger"></span>
                                                                        </div>
                                                                    </fieldset>
                                                                </div>
                                                                <div class="col-md-12 mt-1">
                                                                    <div class="form-group text-end">
                                                                        <button type="submit" class="btn btn-secondary _effect--ripple waves-effect waves-light">Save</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
