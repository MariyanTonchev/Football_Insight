@model MatchFormViewModel

<div class="layout-px-spacing">
    <div class="middle-content container-xxl p-0">
        <div class="row layout-top-spacing">
            <div class="col-xl-12 col-lg-12 col-sm-12 layout-spacing">
                <div class="widget-content widget-content-area br-8">
                    <div id="zero-config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <form asp-action="Edit" method="post">
                            <div class="row g-3">
                                <div class="row justify-content-center">
                                    <div class="col-md-3" style="text-align: center;">
                                        <div class="form-group">
                                            <label asp-for="DateAndTime">Date & Time</label>
                                            <input asp-for="DateAndTime" class="form-control" />
                                            <span asp-validation-for="DateAndTime" class="text-danger"></span>
                                            <div class="text-danger">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-3" style="text-align: left;">
                                        <label asp-for="HomeTeamId" class="form-label">Home Team</label>
                                        <select asp-for="HomeTeamId" class="form-select" asp-items="@(new SelectList(Model.Teams, "TeamId", "Name"))">
                                            <option value="0" selected>Select a team</option>
                                        </select>
                                        <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3" style="text-align: right;">
                                        <label asp-for="AwayTeamId" class="form-label">Away Team</label>
                                        <select asp-for="AwayTeamId" class="form-select" asp-items="@(new SelectList(Model.Teams, "TeamId", "Name"))">
                                            <option value="0" selected>Select a team</option>
                                        </select>
                                        <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12" style="text-align: center;">
                                    <a asp-area="User" asp-action="Index" asp-controller="League" asp-route-ID="@Model.LeagueId" class="btn btn-outline-success mb-2 me-4">Cancel</a>
                                    <input type="hidden" asp-for="MatchId" />
                                    <input type="hidden" asp-for="LeagueId" />
                                    <button type="submit" class="btn btn-outline-success mb-2 me-4">
                                        <span class="btn-text-inner">Edit Match</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
