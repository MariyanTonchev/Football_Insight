@model TeamSimpleViewModel

<form asp-action="Delete" method="post">
    <div class="layout-px-spacing">
        <div class="middle-content container-xxl p-0">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                Are you sure you want to delete the following team?
                            </h5>
                            <p style="color: yellow; text-align: center;">@Model.Name</p>
                            <div class="text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <a asp-action="Index" asp-controller="Team" asp-route-teamId="@Model.TeamId" class="btn btn-outline-success mb-2 me-4">Cancel</a>
                            <button type="submit" class="btn btn-outline-danger mb-2 me-4">Delete</button>
                            <input type="hidden" name="teamId" asp-for="@Model.TeamId" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>