@using Football_Insight.Core.Models.Goal
@model GoalModalViewModel

<form asp-action="Add" asp-controller="Goal" method="post">
    <div class="modal fade" id="goalModal" tabindex="-1" role="dialog" aria-labelledby="goalScoredModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="goalScoredModalLabel">Add goal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fa-solid fa-xmark" style="color: #8c37b3;"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <label asp-for="PlayerScorerId" class="form-label">Goal scored by</label>
                    <select asp-for="PlayerScorerId" class="form-select" asp-items="@(new SelectList(Model.Players, "PlayerId", "Name"))">
                        <option value="0" selected>Select a player</option>
                    </select>
                    <span asp-validation-for="PlayerScorerId" class="text-danger"></span>
                </div>
                <div class="modal-body">
                    <label asp-for="PlayerAssistedId" class="form-label">Goal assisted by:</label>
                    <select asp-for="PlayerAssistedId" class="form-select" asp-items="@(new SelectList(Model.Players, "PlayerId", "Name"))">
                        <option value="0" selected>Select a player</option>
                    </select>
                    <span asp-validation-for="PlayerAssistedId" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <input type="hidden" asp-for="MatchId" />
                    <input type="hidden" asp-for="TeamId" />
                    <input type="hidden" asp-for="PlayerScorerId" />
                    <input type="hidden" asp-for="PlayerAssistedId" />
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>