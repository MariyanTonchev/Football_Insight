@model LeagueSimpleViewModel

<form asp-action="Delete" method="post">
    <input type="hidden" name="leagueId" value="@Model.Id" />
    <div class="layout-px-spacing">
        <div class="middle-content container-xxl p-0">
            <div class="row">
                <div class="col-md-4">
                    <!-- Left space -->
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Are you sure you want to delete @Model.Name?</h5>
                            <div class="text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <a asp-action="All" asp-controller="League" class="btn btn-outline-success mb-2 me-4">Cancel</a>
                            <button type="submit" class="btn btn-outline-danger mb-2 me-4">Delete</button>
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>