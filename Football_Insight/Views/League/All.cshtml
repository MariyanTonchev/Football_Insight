@model List<LeagueSimpleViewModel>

<div class="layout-px-spacing">
    <div class="middle-content container-xxl p-0">
        <div class="col-md-4 col-sm-6" style="margin-left: auto; margin-right: auto;">
            <div class="row layout-top-spacing">
                <div class="col-md-8 col-sm-6" style="">
                    <div class="seperator-header">
                        <h4>All Leagues</h4>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6" style="text-align: right;">
                    <form asp-action="Create" asp-controller="League" method="get">
                        <button type="submit" class="btn btn-outline-success mb-2 me-6">
                            <span class="btn-text-inner">Create League</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="row layout-spacing">
                <div class="col-lg-12">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-content widget-content-area">
                            <div id="individual-col-search3_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                <table id="individual-col-search3" class="table dt-table-hover dataTable" role="grid" aria-describedby="individual-col-search_info">
                                    <thead>
                                        <tr role="row">
                                            <th tabindex="0" aria-controls="individual-col-search3" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 250.203px;">League</th>
                                            <th tabindex="0" aria-controls="individual-col-search3" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 50.266px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var league in Model)
                                        {
                                            <tr role="row">
                                                <td>
                                                    <a asp-action="Index" asp-controller="League" asp-route-Id="@league.Id">@league.Name</a>
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-controller="League" asp-route-LeagueId="@league.Id">
                                                        <i class="fa-solid fa-pencil" style="color: #FFD43B;"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-controller="League" asp-route-LeagueId="@league.Id">
                                                        <i class="fa-regular fa-trash-can" style="color: #ff0000;"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>