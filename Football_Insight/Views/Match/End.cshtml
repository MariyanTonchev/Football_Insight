@using Football_Insight.Core.Constants;
@model MatchEndViewModel

<form asp-action="End" method="post">
    <div class="layout-px-spacing">
        <div class="middle-content container-xxl p-0">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            @if(Model.MatchMinute < MessageConstants.FullTimeMinute)
                            {
                                <h5 class="card-title">
                                    Are you sure you want to postpone the following match:
                                    <p><span style="color: yellow;" : 10">@Model.HomeTeam VS @Model.AwayTeam</span>?</p>
                                </h5>
                            }
                            else{
                                <h5 class="card-title">
                                    Are you sure you want to blow final whistle for the following match:
                                    <p><span style="color: yellow;" : 10">@Model.HomeTeam VS @Model.AwayTeam</span>?</p>
                                </h5>
                            }
                            <input type="hidden" asp-for="HomeTeam" />
                            <input type="hidden" asp-for="AwayTeam" />
                            <div class="text-danger">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <a asp-action="Index" asp-controller="Match" asp-route-MatchId="@Model.MatchId" class="btn btn-outline-success mb-2 me-4">Cancel</a>
                            <button type="submit" class="btn btn-outline-danger mb-2 me-4">End</button>

                            <input type="hidden" asp-for="MatchId" />
                            <input type="hidden" asp-for="LeagueId" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>